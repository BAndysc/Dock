<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="using:Dock.Avalonia.Converters"
                    xmlns:core="using:Dock.Model.Core">
  <Design.PreviewWith>
    <DockDockControl Width="300" Height="300" />
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type DockDockControl}" TargetType="DockDockControl">

    <Setter Property="Template">
      <ControlTemplate>
        <DockableControl TrackingMode="Visible">
          <ItemsControlWorkaround ItemsSource="{Binding VisibleDockables}">
            <ItemsControlWorkaround.Styles>
              <Style Selector="ItemsControlWorkaround > ContentPresenter" x:DataType="core:IDock">
                <Setter Property="(DockPanel.Dock)"
                        Value="{Binding Dock, Converter={x:Static converters:DockModeConverter.Instance}}" />
              </Style>
            </ItemsControlWorkaround.Styles>
            <ItemsControlWorkaround.ItemsPanel>
              <ItemsPanelTemplate>
                <DockPanel DockProperties.IsDropArea="True"
                           Background="Transparent"
                           LastChildFill="{Binding LastChildFill}"/>
              </ItemsPanelTemplate>
            </ItemsControlWorkaround.ItemsPanel>
          </ItemsControlWorkaround>
        </DockableControl>
      </ControlTemplate>
    </Setter>

  </ControlTheme>

</ResourceDictionary>
